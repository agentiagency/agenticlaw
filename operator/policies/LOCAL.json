{
  "role": "LOCAL",
  "tools": {
    "allow": ["read", "glob", "grep", "write", "edit", "bash"],
    "deny": [],
    "ask": []
  },
  "bash_commands": {
    "allow": ["*"],
    "deny": [
      "curl:*", "wget:*", "nc:*", "netcat:*", "ncat:*",
      "ssh:*", "scp:*", "sftp:*", "rsync:*",
      "ping:*", "traceroute:*", "dig:*", "nslookup:*", "host:*",
      "telnet:*", "ftp:*",
      "sudo:*", "su:*",
      "mount:*", "umount:*",
      "docker:*", "kubectl:*", "terraform:*",
      "reboot", "shutdown:*", "halt", "poweroff", "init:*",
      "systemctl:*", "service:*",
      "fdisk:*", "mkfs:*", "mkfs.*:*", "parted:*",
      "iptables:*", "ip:*", "route:*",
      "insmod:*", "modprobe:*", "rmmod:*"
    ],
    "ask": []
  },
  "filesystem": {
    "allow": [
      "read:/workspace", "read:/workspace/**",
      "read:/usr/**",
      "read:/etc/**",
      "write:/workspace", "write:/workspace/**",
      "write:/tmp/**"
    ],
    "deny": [
      "read:/etc/shadow",
      "read:/etc/agenticlaw/**",
      "write:/etc/**",
      "write:/boot/**",
      "write:/sys/**",
      "write:/proc/**",
      "read:/proc/*/mem",
      "read:/proc/kcore"
    ],
    "ask": []
  },
  "network": {
    "allow": [],
    "deny": ["connect:**", "listen:**"],
    "ask": []
  }
}
